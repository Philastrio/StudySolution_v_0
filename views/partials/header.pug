header.header
	.header__column
		a(href=routes.home)
			i.fas.fa-university
	.header__column
		form(action=routes.search, method="get")
			input(type="text", placeholder="검색", name="term")
	.header__column
		ul
			if !user.isAuthenticated
				li
					a(href=routes.join) Join(가입)
				li
					a(href=routes.login) Log in(로그인)
			else
				li
					a(href=`/videos${routes.upload}`) Upload
				li
					a(href=routes.usersDetail(user.id)) Profile
				li
					a(href=routes.logout) Log Out


